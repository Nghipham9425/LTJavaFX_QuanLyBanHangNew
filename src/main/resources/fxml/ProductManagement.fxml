<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sv.qlbh.controller.ProductManagementController"
            prefWidth="1000" prefHeight="700"
            stylesheets="@../styles/product.css">

    <!-- TOP: Thanh tìm kiếm và nút thêm -->
    <top>
        <HBox spacing="10" styleClass="product-toolbar">
            <padding>
                <Insets value="15"/>
            </padding>
            <TextField fx:id="searchField" promptText="Tìm kiếm sản phẩm..." HBox.hgrow="ALWAYS"/>
            <ComboBox fx:id="categoryFilter" promptText="Lọc theo danh mục"/>
            <Button text="Thêm sản phẩm" fx:id="btnAddProduct" styleClass="action-btn primary"/>
        </HBox>
    </top>

    <!-- LEFT: Danh mục sản phẩm -->
    <left>
        <VBox spacing="10" prefWidth="220" styleClass="category-panel">
            <padding>
                <Insets value="15"/>
            </padding>
            <Label text="Danh mục sản phẩm" styleClass="section-title"/>
            <ListView fx:id="categoryList" VBox.vgrow="ALWAYS"/>
            <HBox spacing="5">
                <Button text="Thêm" fx:id="btnAddCategory" styleClass="action-btn secondary"/>
                <Button text="Sửa" fx:id="btnEditCategory" styleClass="action-btn secondary"/>
                <Button text="Xóa" fx:id="btnDeleteCategory" styleClass="action-btn secondary"/>
            </HBox>
        </VBox>
    </left>

    <!-- CENTER: Danh sách sản phẩm -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets value="15"/>
            </padding>
            <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn text="STT" prefWidth="50"/>
                    <TableColumn text="Tên sản phẩm" prefWidth="200"/>
                    <TableColumn text="Mã vạch" prefWidth="120"/>
                    <TableColumn text="Danh mục" prefWidth="120"/>
                    <TableColumn text="Giá bán" prefWidth="100"/>
                    <TableColumn text="Tồn kho" prefWidth="80"/>
                    <TableColumn text="Trạng thái" prefWidth="90"/>
                    <TableColumn text="Hành động" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>