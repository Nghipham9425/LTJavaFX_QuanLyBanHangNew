<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sv.qlbh.controller.SalesController">
   <top>
      <VBox styleClass="header-section">
         <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="toolbar">
            <Label styleClass="page-title" text="💰 Bán Hàng - POS" />
            <Separator orientation="VERTICAL" />
            <Label fx:id="lblCurrentUser" styleClass="user-info" text="Nhân viên: Admin" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lblCurrentTime" styleClass="time-info" text="12:34:56 - 26/06/2025" />
         </HBox>
      </VBox>
   </top>
   
   <center>
      <HBox spacing="15.0" styleClass="main-content">
         <!-- Left Section: Product Search & Selection -->
         <VBox prefWidth="400.0" spacing="10.0" styleClass="left-panel">
            <!-- Product Search -->
            <VBox spacing="8.0" styleClass="search-section">
               <Label styleClass="section-title" text="🔍 Tìm sản phẩm" />
               <HBox spacing="8.0">
                  <TextField fx:id="txtProductSearch" promptText="Tên sản phẩm hoặc mã vạch..." HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnSearch" onAction="#handleProductSearch" styleClass="btn-search" text="Tìm" />
                  <Button fx:id="btnScanBarcode" onAction="#handleScanBarcode" styleClass="btn-scan" text="📷" />
               </HBox>
            </VBox>
            
            <!-- Product List -->
            <VBox spacing="8.0" styleClass="product-section" VBox.vgrow="ALWAYS">
               <Label styleClass="section-title" text="📦 Danh sách sản phẩm" />
               <TableView fx:id="tableProducts" VBox.vgrow="ALWAYS">
                  <columns>
                     <TableColumn fx:id="colProductName" prefWidth="150.0" text="Tên sản phẩm" />
                     <TableColumn fx:id="colProductPrice" prefWidth="80.0" text="Giá bán" />
                     <TableColumn fx:id="colProductStock" prefWidth="60.0" text="Tồn kho" />
                     <TableColumn fx:id="colProductAdd" prefWidth="80.0" text="Thêm" />
                  </columns>
               </TableView>
            </VBox>
         </VBox>
         
         <!-- Right Section: Cart & Payment -->
         <VBox prefWidth="500.0" spacing="10.0" styleClass="right-panel">
            <!-- Customer Selection -->
            <VBox spacing="8.0" styleClass="customer-section">
               <Label styleClass="section-title" text="👤 Khách hàng" />
               <HBox spacing="8.0">
                  <TextField fx:id="txtCustomerSearch" promptText="SĐT hoặc tên khách hàng..." HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnSelectCustomer" onAction="#handleSelectCustomer" styleClass="btn-select" text="Chọn" />
                  <Button fx:id="btnNewCustomer" onAction="#handleNewCustomer" styleClass="btn-new" text="Mới" />
               </HBox>
               <HBox spacing="10.0">
                  <Label fx:id="lblCustomerName" styleClass="customer-info" text="Khách lẻ" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="lblCustomerGroup" styleClass="customer-group" text="👤 Thường" />
                  <Label fx:id="lblCustomerPoints" styleClass="customer-points" text="🎯 0 điểm" />
               </HBox>
            </VBox>
            
            <!-- Shopping Cart -->
            <VBox spacing="8.0" styleClass="cart-section" VBox.vgrow="ALWAYS">
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <Label styleClass="section-title" text="🛒 Giỏ hàng" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnClearCart" onAction="#handleClearCart" styleClass="btn-clear" text="Xóa tất cả" />
               </HBox>
               
               <TableView fx:id="tableCart" VBox.vgrow="ALWAYS">
                  <columns>
                     <TableColumn fx:id="colCartProduct" prefWidth="150.0" text="Sản phẩm" />
                     <TableColumn fx:id="colCartQuantity" prefWidth="70.0" text="SL" />
                     <TableColumn fx:id="colCartPrice" prefWidth="80.0" text="Đơn giá" />
                     <TableColumn fx:id="colCartTotal" prefWidth="90.0" text="Thành tiền" />
                     <TableColumn fx:id="colCartAction" prefWidth="80.0" text="Thao tác" />
                  </columns>
               </TableView>
            </VBox>
            
            <!-- Order Summary -->
            <VBox spacing="8.0" styleClass="summary-section">
               <Label styleClass="section-title" text="💳 Tổng kết đơn hàng" />
               
               <GridPane hgap="10.0" vgap="5.0">
                  <columnConstraints>
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                     <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" />
                  </columnConstraints>
                  
                  <Label styleClass="summary-label" text="Tổng tiền hàng:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <Label fx:id="lblSubtotal" styleClass="summary-value" text="0 ₫" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  
                  <Label styleClass="summary-label" text="Giảm giá:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <Label fx:id="lblDiscount" styleClass="summary-value" text="0 ₫" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  
                  <Separator GridPane.columnSpan="2" GridPane.rowIndex="2" />
                  
                  <Label styleClass="summary-label-total" text="TỔNG THANH TOÁN:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                  <Label fx:id="lblTotal" styleClass="summary-value-total" text="0 ₫" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </GridPane>
               
               <!-- Payment Method -->
               <HBox spacing="10.0">
                  <Label styleClass="payment-label" text="Thanh toán:" />
                  <RadioButton fx:id="rbCash" selected="true" styleClass="payment-option" text="Tiền mặt" />
                  <RadioButton fx:id="rbCard" styleClass="payment-option" text="Thẻ" />
                  <RadioButton fx:id="rbATM" styleClass="payment-option" text="ATM" />
               </HBox>
               
               <!-- Cash Payment -->
               <HBox fx:id="pnlCashPayment" spacing="10.0">
                  <Label styleClass="payment-label" text="Tiền khách đưa:" />
                  <TextField fx:id="txtCashReceived" onKeyReleased="#handleCashChanged" promptText="0" styleClass="cash-input" />
                  <Label styleClass="payment-label" text="Tiền thừa:" />
                  <Label fx:id="lblChange" styleClass="change-amount" text="0 ₫" />
               </HBox>
               
               <!-- Action Buttons -->
               <HBox spacing="10.0">
                  <Button fx:id="btnCheckout" onAction="#handleCheckout" prefHeight="40.0" styleClass="btn-checkout" text="💰 THANH TOÁN" HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnHold" onAction="#handleHoldOrder" prefHeight="40.0" styleClass="btn-hold" text="⏸️ GIỮ ĐƠN" />
                  <Button fx:id="btnCancel" onAction="#handleCancelOrder" prefHeight="40.0" styleClass="btn-cancel" text="❌ HỦY" />
               </HBox>
            </VBox>
         </VBox>
      </HBox>
   </center>
   
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</BorderPane> 